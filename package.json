{
    "name": "freeday-web",
    "version": "1.0.4",
    "author": "Coddity",
    "description": "Freeday web client",
    "scripts": {
        "dev": "vite serve src --open --mode=dev --port=8788 --config vite.config.js",
        "dev-no-open": "vite serve src --no-open --mode=dev --port=8788 --config vite.config.js",
        "build": "vite build src --mode=prod --outDir=../build",
        "wait": "wait-on http-get://localhost:8788 --httpTimeout 180000 --timeout 180000",
        "test": "concurrently --success first --kill-others \"npm run start-no-open\" \"npm run wait && npm run e2e\"",
        "e2e": "npx playwright test --reporter list --config tests/e2e/conf/headless.js",
        "e2e-headed": "npx playwright test --reporter list --config tests/e2e/conf/headed.js",
        "e2e-headed-slow": "npx playwright test --reporter list --config tests/e2e/conf/headedSlow.js",
        "lint-js": "eslint . --max-warnings=0",
        "lint-js-fix": "eslint . --fix --max-warnings=0",
        "lint-css": "stylelint src/**/*.css --max-warnings=0",
        "lint-css-fix": "stylelint src/**/*.css --fix --max-warnings=0",
        "lint": "npm run lint-js && npm run lint-css",
        "lint-fix": "npm run lint-js-fix && npm run lint-css-fix"
    },
    "dependencies": {
        "@babel/core": "^7.17.9",
        "@babel/eslint-parser": "^7.17.0",
        "@blueprintjs/core": "^3.54.0",
        "@blueprintjs/datetime": "^3.24.0",
        "@blueprintjs/popover2": "^1.4.2",
        "dayjs": "^1.11.1",
        "ejs": "^3.1.7",
        "emoji-mart": "^3.0.1",
        "express": "^4.17.3",
        "query-string": "^7.1.1",
        "react": "^17.0.2",
        "react-csv": "^2.2.2",
        "react-dom": "^17.0.2",
        "react-icons": "^4.3.1",
        "react-image-file-resizer": "^0.4.7",
        "react-router-dom": "^5.3.1",
        "react-select": "^5.3.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.21.1",
        "@vitejs/plugin-react": "^1.3.2",
        "chai": "^4.3.6",
        "concurrently": "^7.1.0",
        "eslint": "^8.13.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-plugin-chai-friendly": "^0.7.2",
        "eslint-plugin-flowtype": "^8.0.3",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.29.4",
        "mocha": "^9.2.2",
        "node-fetch": "^2.6.7",
        "playwright": "^1.21.1",
        "stylelint": "^14.7.1",
        "stylelint-config-standard": "^25.0.0",
        "stylelint-order": "^5.0.0",
        "vite": "^2.9.14",
        "wait-on": "^6.0.1"
    }
}
