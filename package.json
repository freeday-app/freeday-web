{
    "name": "freeday-web",
    "version": "1.0.0",
    "author": "Coddity",
    "description": "Freeday web client",
    "type": "module",
    "dependencies": {
        "@babel/core": "^7.16.0",
        "@babel/eslint-parser": "^7.16.3",
        "@blueprintjs/core": "^3.51.3",
        "@blueprintjs/datetime": "^3.23.18",
        "dayjs": "^1.10.7",
        "ejs": "^3.1.6",
        "emoji-mart": "^3.0.1",
        "eslint": "^8.3.0",
        "eslint-config-airbnb": "^19.0.1",
        "eslint-plugin-chai-friendly": "^0.7.2",
        "eslint-plugin-flowtype": "^8.0.3",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.27.1",
        "express": "^4.17.1",
        "markdownlint": "^0.24.0",
        "markdownlint-cli": "^0.30.0",
        "query-string": "^7.0.1",
        "react": "^17.0.2",
        "react-csv": "^2.0.3",
        "react-dom": "^17.0.2",
        "react-icons": "^4.3.1",
        "react-image-file-resizer": "^0.4.7",
        "react-router-dom": "^5.2.1",
        "react-scripts": "^4.0.3",
        "react-select": "^5.2.1",
        "stylelint": "^14.1.0",
        "stylelint-config-standard": "^24.0.0",
        "stylelint-order": "^5.0.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.12.3",
        "chai": "^4.3.4",
        "concurrently": "^6.4.0",
        "cross-env": "^7.0.3",
        "mocha": "^9.1.3",
        "node-fetch": "^2.6.6",
        "playwright": "^1.12.3",
        "wait-on": "^6.0.0"
    },
    "scripts": {
        "start": "cross-env REACT_APP_ENV=dev PORT=8788 SKIP_PREFLIGHT_CHECK=true react-scripts start",
        "start-no-browser": "cross-env REACT_APP_ENV=dev PORT=8788 BROWSER=none SKIP_PREFLIGHT_CHECK=true react-scripts start",
        "wait": "wait-on http-get://localhost:8788",
        "build": "SKIP_PREFLIGHT_CHECK=true react-scripts build",
        "eject": "react-scripts eject",
        "test": "concurrently --success first --kill-others \"npm run start-no-browser\" \"npm run wait && npm run e2e\"",
        "e2e": "npx playwright test --reporter list --config tests/e2e/conf/headless.js",
        "e2e-headed": "npx playwright test --reporter list --config tests/e2e/conf/headed.js",
        "e2e-headed-slow": "npx playwright test --reporter list --config tests/e2e/conf/headedSlow.js",
        "lint-js": "eslint .",
        "lint-js-fix": "eslint . --fix",
        "lint-css": "stylelint **/*.css",
        "lint-css-fix": "stylelint **/*.css --fix",
        "lint-md": "markdownlint README.md",
        "lint-md-fix": "markdownlint README.md --fix",
        "lint": "npm run lint-js && npm run lint-css && npm run lint-md",
        "lint-fix": "npm run lint-js-fix && npm run lint-css-fix && npm run lint-md-fix"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
