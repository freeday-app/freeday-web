{
    "plugins": [
        "stylelint-order"
	],
    "extends": [
        "stylelint-config-standard"
    ],
    "rules": {
        "indentation": 4,
		"order/properties-alphabetical-order": true
	},
    "ignoreFiles": [
        "node_modules/**/*",
        "client/build/**/*",
        "client/node_modules/**/*",
        "docs/build/**/*",
        "docs/node_modules/**/*"
    ]
}
